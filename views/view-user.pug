head 
    meta(charset='utf-8')
    title="MyBank"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous") 
    link( href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet")
body 
    nav(class="navbar navbar-dark bg-dark")
                div(class="container-fluid")
                    div
                        bi.bi-bank2(style="color:#ffffff; font-size:32px; padding:5px; align-item:center")
                        ||
                        a(class="navbar-brand" href='#' style="font-weight:bold; font-size:32px")="MyBank"

                    div(class="flex")
                            bi.bi-box-arrow-left(style="color:#ffffff; font-size:32px")
                            ||||
                            a(href="/logout" style="font-size:30px")="Logout"

    div(class="container pt-5 pb-5")
        nav(aria-label='breadcrumb')
        ol(class="breadcrumb")
            for person in chosenPersonList
                a(class="breadcrumb-item" href="/dashboard/" + person.id)="Home"
                li(class="breadcrumb-item active" aria-currents="page")="View Details"

        div(class="mx-auto pt-5 pb-5 text-center" style="font-weight:bold; font-size: 32px")="YOUR DETAILS"

        div(class="row mb-5")
            div(class="view-user")
            div(class="row")
                div(class="col")
                    table(class="table")
                        thead
                            tr
                                th(scope="col") Username
                                th(scope="col") Password
                                th(scope="col") Email
                                th(scope="col") Account Balance
                                th(scope="col") Account Number
                        tbody
                            for person in chosenPersonList
                                tr  
                                    th(scope="row")= person.username
                                    td= person.password
                                    td= person.email
                                    td= '$' + person.balance
                                    td= person.accountNo
        
